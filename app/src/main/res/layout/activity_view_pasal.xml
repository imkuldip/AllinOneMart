<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/viewpasal_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shutters' Status"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@id/viewpasal_title"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressDialog"
        android:layout_below="@+id/viewpasal_title"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        />
    <ScrollView
        android:layout_marginTop="25dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/recyclerViewPasal"
        >
        <!--android:layout_marginTop="50dp"-->
    </android.support.v7.widget.RecyclerView>
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_alignParentBottom="true"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal">

        <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#de0509"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked"
            android:textColor="#5a8ab4"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#1ce129"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textColor="#5a8ab4"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#fff200"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserved"
            android:textColor="#5a8ab4"/>
        </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
